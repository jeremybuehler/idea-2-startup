# Codex Agents / OpenAI API Configuration
CODEX_API_KEY=your_codex_api_key_here
# Legacy fallback if migrating from Anthropic
ANTHROPIC_API_KEY=your_claude_api_key_here

# Frontend Configuration
NEXT_PUBLIC_API_BASE=          # Backend API URL for live mode (optional)
NEXT_PUBLIC_USE_LIVE=false     # Default to simulated mode

# AI Configuration
QUALITY_THRESHOLD=0.7          # Quality threshold for generated content (0-1)
BUDGET_LIMIT=10.0              # Budget limit per pipeline in USD

# Development Variables  
NODE_ENV=development           # development | production
APP_ENV=local                  # local | staging | production
LOG_LEVEL=debug                # debug | info | warn | error

# Build-time Variables (auto-populated)
APP_NAME="I2S Studio"          # Application name
APP_VERSION=                   # Automatically set from package.json

# Optional: Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/i2s_studio
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring and Analytics
# PROMETHEUS_ENDPOINT=http://localhost:9090
# JAEGER_ENDPOINT=http://localhost:14268
